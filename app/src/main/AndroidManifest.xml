<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.md_08_ungdungfivestore">

    <!-- Quyền truy cập Internet (Bắt buộc để gọi API và load WebView) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MD08_UngDungFiveStore"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ✅ 1. Cấu hình PaymentReturnActivity để bắt Deep Link từ VNPay -->
        <!-- launchMode="singleTask": Giúp tái sử dụng Activity nếu đã tồn tại thay vì tạo mới -->
        <activity
            android:name=".PaymentReturnActivity"
            android:exported="true"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- ⚠️ QUAN TRỌNG: scheme và host phải khớp với code Backend trả về -->
                <!-- Backend trả về: fivestore://app?... -->
                <data
                    android:scheme="fivestore"
                    android:host="app" />
            </intent-filter>

        </activity>

        <!-- ✅ 2. Cấu hình PaymentActivity (WebView) -->
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ===== CÁC ACTIVITY  ===== -->
        <activity android:name=".OtpActivity" android:exported="false" />
        <activity android:name=".CaiDatActivity" android:exported="false" />
        <activity android:name=".MatKhauMoi" android:exported="false" />
        <activity android:name=".TimKiem" android:exported="false" />
        <activity android:name=".XemChiTiet" android:exported="false" />
        <activity android:name=".ManTrangChu" android:exported="false" />
        <activity android:name=".ManDanhGiaSanPham" android:exported="false" />
        <activity android:name=".ManDatHang" android:exported="false" />
        <activity android:name=".ManLienHe" android:exported="false" />
        <activity android:name=".ManDonHang" android:exported="false" />
        <activity android:name=".ManDangKy" android:exported="false" />
        <activity android:name=".ManChat" android:exported="false" />
        <activity android:name=".GuiMaXacNhan" android:exported="false" />
        <activity android:name=".MatKhauSai" android:exported="false" />
        <activity android:name=".DangNhap" android:exported="false" />
        <activity android:name=".DoiMatKhauActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".ManThongTinDonHang" android:exported="true" />
        <activity android:name=".ManThongTinCaNhan" android:exported="true" />


        <!-- Màn hình Chào (Launcher) -->
        <activity
            android:name=".ManChao"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".TimKiem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- Nút back + thanh tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBackSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_back_button"
                android:padding="8dp"
                android:src="@drawable/back_icon"
                android:contentDescription="Back" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_search_box"
                android:hint="Áo trẻ em"
                android:paddingHorizontal="16dp"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/btnSearchAction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_back_button"
                android:src="@drawable/ic_search"
                android:padding="8dp"
                android:contentDescription="Search" />
        </LinearLayout>

        <!-- Tiêu đề gợi ý -->
        <TextView
            android:id="@+id/tvTitleSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Có thể bạn muốn tìm"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Gợi ý danh mục dùng GridLayout -->
        <GridLayout
            android:id="@+id/gridSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:columnCount="4"
            android:alignmentMode="alignMargins"

            android:useDefaultMargins="true">


            <Button
                style="@style/SearchCategoryButton"
                android:text="Áo" />


            <Button
                style="@style/SearchCategoryButton"
                android:text="Quần" />
            <Button
                style="@style/SearchCategoryButton"
                android:text="Váy" />


        </GridLayout>

        <!-- Danh sách gợi ý văn bản -->
        <LinearLayout
            android:id="@+id/layoutTextSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">


        </LinearLayout>

        <!-- Grid sản phẩm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

    </LinearLayout>
</ScrollView>
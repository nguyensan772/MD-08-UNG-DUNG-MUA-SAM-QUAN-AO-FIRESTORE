<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLienHe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vien_edit_text"
    android:padding="20dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tieuDeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ"
        android:textSize="33dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tên -->
    <EditText
        android:id="@+id/tenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên của bạn"
        android:background="@drawable/vien_edit_text"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tieuDeTextView"/>

    <!-- Email -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/vien_edit_text"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tenEditText"/>

    <!-- Nội dung -->
    <EditText
        android:id="@+id/noiDungEditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Nội dung liên hệ"
        android:gravity="top"
        android:background="@drawable/vien_edit_text"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"/>

    <!-- Nút gửi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/guiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi góp ý"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/ChuDe"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/noiDungEditText"/>

    <!-- Nút gọi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/goiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gọi Hotline"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/ChuDe"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/guiButton"/>

    <!-- Nút email -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/emailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi Email"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/ChuDe"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/goiButton"/>

    <!-- Nút bản đồ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem bản đồ"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/ChuDe"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/emailButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>

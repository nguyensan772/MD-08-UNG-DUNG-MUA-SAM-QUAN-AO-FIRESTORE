<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0E12"
    tools:context=".ManLienHe">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">


                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_btn_round_dark"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/quay_lai_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:text="Liên hệ"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Form inputs (viền cam, nền trắng, bo góc) -->
            <EditText
                android:id="@+id/edtHoTen"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_contact"
                android:hint="Họ tên"
                android:paddingHorizontal="14dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#8E96A3"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/edtSDT"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_contact"
                android:hint="SDT"
                android:paddingHorizontal="14dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#8E96A3"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_contact"
                android:hint="Email"
                android:paddingHorizontal="14dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#8E96A3"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/edtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_contact"
                android:hint="Địa chỉ"
                android:paddingHorizontal="14dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#8E96A3"
                android:inputType="textPostalAddress"/>

            <!-- Nội dung liên hệ: bo tròn lớn hơn -->
            <EditText
                android:id="@+id/edtNoiDung"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_message"
                android:gravity="top|start"
                android:hint="Nội dung liên hệ"
                android:padding="14dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#8E96A3"
                android:inputType="textMultiLine"
                android:overScrollMode="always"/>

            <!-- Nút Gửi -->
            <Button
                android:id="@+id/btnGui"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:text="Gửi"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_primary_button"/>

            <!-- Khối thông tin liên hệ dưới cùng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp">

                <!-- Điện thoại -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#DA7A44"/>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: 0909 999 888"
                        android:textColor="#DA7A44"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✉️"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#B8BDC7"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: lienhe@quancaphe.com"
                        android:textColor="#DA7A44"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Địa chỉ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#DA7A44"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: 123 Lê Lợi, Quận 1, TP.HCM"
                        android:textColor="#DA7A44"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- ScrollView chứa nội dung -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ViewPager2 hiển thị ảnh -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Back button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="start|top"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/back_icon"
                    android:contentDescription="Quay lại" />
            </FrameLayout>

            <!-- Indicator dots -->
            <LinearLayout
                android:id="@+id/layoutIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- Tên sản phẩm + Giá + Icon giao hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Cột bên trái: Tên + Giá -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên sản phẩm"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100,000 VND"
                        android:textColor="#D17842"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Bên phải: Icon giao hàng + thời gian -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_delivery"
                        android:contentDescription="Giao hàng" />

                    <TextView
                        android:id="@+id/tvDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="1-3 ngày"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Mô tả sản phẩm -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả sản phẩm"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvProductDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu sản phẩm..."
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:lineSpacingMultiplier="1.2"/>

            <!-- Chọn Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn size:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeM"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="M"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="L"
                    android:layout_marginStart="8dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSizeXL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="XL"
                    android:layout_marginStart="8dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Chọn Màu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn màu:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnColorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Đỏ"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnColorBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Xanh"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnColorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Đen"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_size_unselected"
                    android:backgroundTint="@null"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer: hai nút luôn nằm dưới cùng -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#121212">

        <Button
            android:id="@+id/btnOrderNow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Đặt hàng"
            android:backgroundTint="#D17842"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm vào giỏ hàng"
            android:backgroundTint="#D17842"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="12dp"/>
    </LinearLayout>


</RelativeLayout>

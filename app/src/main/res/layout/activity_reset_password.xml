<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#121212"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt Lại Mật Khẩu"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã OTP đã được xác thực. Vui lòng nhập mật khẩu mới của bạn."
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/edtNewPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtConfirmPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận Mật khẩu mới"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnFinalReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn Tất Đổi Mật Khẩu"
        android:paddingVertical="12dp"
        android:textSize="18sp"/>

</LinearLayout>
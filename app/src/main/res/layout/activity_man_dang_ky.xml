<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNen"
    android:paddingHorizontal="10dp"
    tools:context=".ManDangKy">
    <ImageView
        android:id="@+id/imgLogoDangNhap"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/tenDangKyEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tên"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:background="@drawable/bg_login"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogoDangNhap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/edtEmailDangNhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:background="@drawable/bg_login"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tenDangKyEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/matKhauTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edtEmailDangNhap"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/matKhauTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:hint="Mật khẩu"
            android:textColorHint="#999999"
            android:inputType="textPassword"
            android:background="@drawable/bg_login"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nhapLaiMatKhauTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/matKhauTextInputLayout"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nhapLaiMatKhauTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:hint="Nhập lại mật khẩu"
            android:textColorHint="#999999"
            android:inputType="textPassword"
            android:background="@drawable/bg_login"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/nutDangKyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:background="@drawable/nen_nut"
        android:padding="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nhapLaiMatKhauTextInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/banDaCoTaiKhoanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã có tài khoản rồi?"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12dp"
        android:textColor="@color/XamNhat"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nutDangKyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dangNhapTextView"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <TextView
        android:id="@+id/dangNhapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12dp"
        android:textColor="@color/ChuDe"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutDangKyTextView"
        app:layout_constraintStart_toEndOf="@id/banDaCoTaiKhoanTextView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0F14"
    android:paddingHorizontal="10dp"
    tools:context=".ManDangKy">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogoDangNhap"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tên -->
    <EditText
        android:id="@+id/tenDangKyEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Tên"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:background="@drawable/bg_login"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogoDangNhap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email -->
    <EditText
        android:id="@+id/edtEmailDangNhap"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#999999"
        android:textSize="15sp"
        android:background="@drawable/bg_login"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tenDangKyEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mật khẩu -->
    <!-- Mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/matKhauTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtEmailDangNhap"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true"
        android:hint="Mật khẩu"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/matKhauTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:background="@drawable/bg_login"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nhập lại mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nhapLaiMatKhauTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/matKhauTextInputLayout"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true"
        android:hint="Nhập lại mật khẩu"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nhapLaiMatKhauTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:background="@drawable/bg_login"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Nút đăng ký -->
    <TextView
        android:id="@+id/nutDangKyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:background="@drawable/nen_nut"
        android:padding="16dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nhapLaiMatKhauTextInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dòng đăng nhập -->
    <TextView
        android:id="@+id/banDaCoTaiKhoanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã có tài khoản rồi?"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12dp"
        android:textColor="@color/XamNhat"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/nutDangKyTextView"
        app:layout_constraintEnd_toStartOf="@id/dangNhapTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/dangNhapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12dp"
        android:textColor="@color/ChuDe"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/nutDangKyTextView"
        app:layout_constraintStart_toEndOf="@id/banDaCoTaiKhoanTextView"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

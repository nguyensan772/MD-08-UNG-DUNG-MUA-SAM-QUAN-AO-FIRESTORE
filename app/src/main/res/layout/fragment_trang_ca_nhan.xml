<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.TrangCaNhanFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:id="@+id/btnDonHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Đơn hàng"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"  />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnThongTinCaNhan"
            android:paddingHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Thông tin cá nhân"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"  />
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="10dp"

            android:id="@+id/btnLienHe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bock"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Chính Sách"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"  />
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="10dp"

            android:id="@+id/btnCaiDatChung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Chủ đề"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHoTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_support"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Hỗ trợ"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDoiMatKhau"
            android:paddingHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Đổi mật khẩu"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"  />
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="10dp"

            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Đăng xuất"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white"   />
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="10dp"

            android:id="@+id/btnDangNhapCaiDatChung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_trang_ca_nhan"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                app:tint="#D17842" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Đăng nhập"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                app:tint="?attr/colorOnPrimary" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
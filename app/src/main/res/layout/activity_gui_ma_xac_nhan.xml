<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0F0E0E"
    android:padding="24dp"
    android:id="@+id/main"
    tools:context=".GuiMaXacNhan">

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btnBackMaXacNhan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:background="#0D0D0D"
        android:src="@drawable/back"
        android:layout_marginBottom="40dp" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy nhập Email của bạn !"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="24dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="16dp" />

    <!-- Input Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="24dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edtEmailForgot"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="50dp"
        android:hint="Nhập email của bạn"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Nút xác nhận -->

    <TextView
        android:id="@+id/nutXacNhanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi Mã Xác Nhận"
        android:textColor="@color/white"
        android:background="@drawable/nen_nut"
        android:padding="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14dp"
        android:layout_marginHorizontal="24dp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nhapLaiMatKhauTextInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</LinearLayout>
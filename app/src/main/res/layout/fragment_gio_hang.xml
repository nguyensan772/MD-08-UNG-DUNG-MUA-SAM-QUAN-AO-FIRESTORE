<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNen"
    tools:context=".fragments.GioHangFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gioHangRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/gioHangRecyclerView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp">

            <TextView
                android:id="@+id/tongTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng"
                android:textSize="14sp"
                android:textColor="#AEAEAE"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tongSoTienTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100K VND"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@id/tongTextView"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/thanhToanBtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/bg_primary_button"
            android:text="Thanh toán"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
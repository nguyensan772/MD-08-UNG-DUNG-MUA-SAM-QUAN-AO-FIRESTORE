<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State khi nút được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#292929"/> <!-- nền tối khi nhấn -->
            <stroke android:width="1dp" android:color="#D17842"/> <!-- viền cam khi nhấn -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- State mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E1E1E"/> <!-- nền tối -->
            <stroke android:width="1dp" android:color="#555555"/> <!-- viền xám nhạt -->
            <corners android:radius="8dp"/> <!-- bo tròn -->
        </shape>
    </item>

</selector>

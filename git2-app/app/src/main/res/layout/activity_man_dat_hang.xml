<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ManDatHang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/quayLaiBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|top"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_icon"
            android:contentDescription="Quay lại"  />

        <!-- Shipping Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/nen_item_chu_de"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thông tin người nhận"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/hoTenKhachHangTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Họ và tên"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333" />

            <EditText
                android:id="@+id/soDienThoaiTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent"
                android:padding="8dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333" />

            <EditText
                android:id="@+id/diaChiTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Địa chỉ chi tiết"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:fontFamily="@font/poppins_semibold"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:minLines="2" />
        </LinearLayout>

        <!-- Payment Method Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/nen_item_chu_de"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Phương thức thanh toán"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/thanhToanRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Thanh toán khi nhận hàng (COD)"
                    android:checked="true"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/thanhToanTruocRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Thanh toán trước (VNPay)"
                    android:textColor="@color/white" />
            </RadioGroup>
        </LinearLayout>

        <!-- Order Items RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/danhSachMuaRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Total Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/nen_item_chu_de"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tổng cộng"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tongSoTienTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="0 VND"
                android:textColor="#D17842"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nutThanhToanTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/nen_nut"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:padding="12dp"
                android:text="Thanh toán"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/layoutItemNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#1C1F26"> <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgNotif"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"

        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ChuDe"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMessageNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#BCBCBC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTimeNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#676767"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:id="@+id/viewUnread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_circle_chude" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
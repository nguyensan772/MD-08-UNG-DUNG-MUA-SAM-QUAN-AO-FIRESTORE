<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trangChuFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNen">


    <TextView
        android:id="@+id/timQuanAoYeuThichNhatCuaBanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm quần áo yêu thích nhất của bạn"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/timKiemEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_login"
        android:hint="Tìm quần áo của bạn"
        android:textColorHint="@color/MauHint"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/baseline_search_24"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="10dp"
        android:textSize="16sp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/timQuanAoYeuThichNhatCuaBanTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>